@page "{id:int?}"
@model Berras_bio.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Movie";
}

<h1>Movies</h1>

@*<p>
    <a asp-page="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieModel[0].Seats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MovieModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                <a asp-page="/Booking/Booking" asp-route-id="@item.ID">Book Tickets</a>  
            </td>
        </tr>
}
    </tbody>
</table>
